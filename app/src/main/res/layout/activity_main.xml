<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="337dp"
            android:layout_height="55dp"
            android:gravity="right"
            android:text="@string/Calculator"
            android:id="@+id/Value_Output"

            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:textSize="36sp" tools:text="0" android:layout_marginLeft="20dp" android:layout_marginStart="20dp"
            android:layout_marginRight="20dp" android:layout_marginEnd="20dp" android:layout_marginTop="52dp"
            app:layout_constraintTop_toTopOf="parent"/>


    <TableRow

            android:layout_width="350dp"
            android:layout_height="60dp"
            android:visibility="visible"
            tools:verticalScrollbarPosition="defaultPosition"
            android:id="@+id/TableRow4"
            app:layout_constraintBottom_toTopOf="@+id/tableRow3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="30dp" android:layout_marginStart="30dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="30dp" android:layout_marginRight="30dp">
        <Button

                android:text="@string/Reset"
                android:layout_width="88dp"
                android:layout_height="match_parent" android:id="@+id/reset"/>
        <Button
                android:text="@string/plus_minus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/plus_minus"/>
        <Button
                android:text="@string/mod"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/mod"/>
        <Button
                android:text="@string/del"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/del"/>
    </TableRow>

    <TableRow

            android:layout_width="350dp"
            android:layout_height="60dp"
            android:visibility="visible"
            tools:verticalScrollbarPosition="defaultPosition" android:id="@+id/tableRow3"
            app:layout_constraintBottom_toTopOf="@+id/tableRow2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="30dp" android:layout_marginStart="30dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="30dp" android:layout_marginRight="30dp">
        <Button
                android:text="@string/num7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/num7" android:visibility="visible"/>
        <Button

                android:text="@string/num8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/num8"/>
        <Button

                android:text="@string/num9"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/num9"/>
        <Button

                android:text="@string/multi"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/multiply"/>
    </TableRow>

    <TableRow

            android:layout_width="350dp"
            android:layout_height="60dp"
            android:visibility="visible"
            tools:verticalScrollbarPosition="defaultPosition" android:id="@+id/tableRow2"
            app:layout_constraintBottom_toTopOf="@+id/tableRow1" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="30dp" android:layout_marginStart="30dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="30dp" android:layout_marginRight="30dp">
        <Button

                android:text="@string/num4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/num4"/>
        <Button

                android:text="@string/num5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/num5"/>
        <Button

                android:text="@string/num6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/num6"/>
        <Button

                android:text="@string/div"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/divid"/>
    </TableRow>

    <TableRow

            android:layout_width="350dp"
            android:layout_height="60dp"
            android:visibility="visible"
            tools:verticalScrollbarPosition="defaultPosition"
            app:layout_constraintBottom_toTopOf="@+id/tableRow0"
            android:id="@+id/tableRow1" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp">
        <Button

                android:text="@string/num1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/num1"/>
        <Button

                android:text="@string/num2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/num2"/>
        <Button

                android:text="@string/num3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/num3"/>
        <Button

                android:text="@string/substruct"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/substract"/>
    </TableRow>

    <TableRow

            android:layout_width="350dp"
            android:layout_height="60dp"
            android:visibility="visible"
            tools:verticalScrollbarPosition="defaultPosition" android:id="@+id/tableRow0"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="40dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp">
        <Button
                android:text="@string/num0"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/num0"/>
        <Button

                android:text="@string/dot"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/dot"/>
        <Button

                android:text="@string/equal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/equal"/>
        <Button

                android:text="@string/add"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/add"/>
    </TableRow>

</android.support.constraint.ConstraintLayout>